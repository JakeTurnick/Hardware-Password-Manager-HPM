<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HPM_Companion.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>
    <Application.Resources>
        <FontFamily x:Key="Unifont">/Assets/unifont.ttf#Unifont</FontFamily>
        <SolidColorBrush x:Key="PrimaryBackground">#14172d</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBackground">#006699</SolidColorBrush>
    </Application.Resources>
</Application>